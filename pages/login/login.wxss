.container {
  height: 50%;
  font-size: 40px;
  -webkit-transition-duration: 1s;
          transition-duration: 1s;
  -webkit-transition-timing-function: ease-in-put;
          transition-timing-function: ease-in-put;
  font-weight: 200;
  padding:50rpx 0;
  display:flex;
  flex-direction:column;
  align-items:center;
  box-sizing:border-box;


}
form {
  padding: 20px 0;
  position: relative;
  z-index: 2;
}
.input_view{
  width: 100%;
  height: 20%;
}
.form_title{
  font-size: 17px;
  float: left;
  width: 20%;
  color: #000000;
  padding-top:7%;
  padding-left: 5%;

}
.form_input {
  width: 75%;
  
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  outline: 0;
  border-bottom: 1px solid rgba(3, 3, 3, 0.4);
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 3px;
  padding: 10px 15px;
  margin: 0 auto 10px auto;
  display: block;
  text-align: center;
  font-size: 18px;
  color: rgb(7, 4, 4);
  -webkit-transition-duration: 0.25s;
          transition-duration: 0.25s;
  font-weight: 300;

}
.form_input:hover {
  background-color: rgba(255, 255, 255, 0.4);
}
.form_input:focus {
  background-color: white;
  width: 300px;
  color: #cce4da;
}
.form_button {
  float: left;
  width: 20%;
  height: 3%;
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  outline: 0;
  background-color: white;
  border: 0;
  margin: 10% 15% 0% 15%;
  color: #85a397;
  border-radius: 3px;
  cursor: pointer;
  font-size: 18px;
  -webkit-transition-duration: 0.25s;
          transition-duration: 0.25s;
}
.form_button:hover {
  background-color: #f5f7f9;
}
