/**index.wxss**/

.page{
  height: 100%;
  width: 100%;
}
.page_map{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.controls {
  position: absolute;
  width: 85%;
  height: 15%;
  top: 80%;
  left: 7%;
  border: 1px solid rgb(214, 214, 214);
  -webkit-box-shadow: #666 0px 0px 10px;
  -moz-box-shadow: #666 0px 0px 10px;
  box-shadow: rgb(143, 109, 109) 0px 0px 10px;
  background-color: rgba(236, 232, 232, 0.911);
  border-radius: 5%;
  display: flex;
}
.btn_div{
  width: 50%;
  height: 100%;
  float: left;
}
.btn_img{
  width: 30%;
  height: 50%;
  padding:4% 40%;
}
.btn_img_righr{
  width: 30%;
  height: 50%;
  padding:5% 40%;
}
.btn_text{
  width: 45%;
  padding: 0% 37%;
  color: rgb(143, 137, 137);
  font: 14px/1.5 "Helvetica Neue",Helvetica,Arial,"Microsoft Yahei","Hiragino Sans GB","Heiti SC","WenQuanYi Micro Hei",sans-serif; 
}
